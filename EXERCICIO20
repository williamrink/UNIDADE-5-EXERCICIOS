import java.util.Scanner;

public class Uni5Exe20 {
    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);

        System.out.println("\nInsira a massa inicial: ");
        double massaInicial = teclado.nextDouble();
        double massa = massaInicial;
        int temporizador = 0;
        while (massa >= 0.5) {
            temporizador += 50;
            massa /= 2;
        }
        System.out.printf("\nMassa inicial: %.1fg", massaInicial);
        System.out.printf("\nMassa final: %.3fg", massa);
        System.out.printf("\nTempo decorrido: %dseg" ,temporizador);
    }
}
